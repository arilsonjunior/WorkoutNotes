<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.arilsonjunior.workoutnotes" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.workoutnote.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.workoutnote.NewNoteActivity"
            android:label="@string/title_activity_new_note"
            android:theme="@style/AppTheme.Base">
        </activity>
        <activity
            android:name="com.workoutnote.ListaNotesActivity"
            android:label="@string/title_activity_lista_notes"
            android:theme="@style/AppTheme.Base">
        </activity>
    </application>

</manifest>
